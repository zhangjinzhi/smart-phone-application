<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangjinzhi.answer_question.examination.MainActivity"
    android:background="@mipmap/mainbackground">

    <TextView
        android:id="@+id/stuName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="18sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Name"
        android:background="@drawable/back1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />

    <TextView
        android:id="@+id/stuNum"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/stuName"
        android:layout_alignRight="@+id/stuName"
        android:layout_below="@+id/stuName"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:background="@drawable/back1"
        android:text="UID"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/startQuiz"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@drawable/start"
        android:layout_below="@+id/stuNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

</RelativeLayout>
